import java.util.Scanner;

public class carro {
    public static void main(String[] args) {

        try (Scanner sc = new Scanner(System.in)) {
            System.out.println("Digite o numero de carros vendidos:");
            double carro= sc.nextDouble();

            System.out.println("Digite o valor total de suas vendas");
            double vendas= sc.nextDouble();

            System.out.println("Digite o valor do seu salario fixo:");
            double salario= sc.nextDouble();

            System.out.println("Digite o valor que recebe por carro vendido:");
            double recebe= sc.nextDouble();

            double salariototal;
            salariototal= ((salario+(vendas*0.05))+(carro*recebe));

            System.out.println("o salario total Ã© de:" + salariototal);
        }

}}
